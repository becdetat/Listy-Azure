@using System.Web.Optimization
@using Listy.Web.Infrastructure
@{
    Layout = null;
    var navigationSection = (NavigationSection?)ViewBag.NavigationSection ?? NavigationSection.Listy;
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/bundles/css")
        <!--[if lt IE 9]>
            @Scripts.Render("~/bundles/html5shiv")
        <![endif]-->
       
        @RenderSection("head", required: false)
    </head>
    <body>
        <header class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".basil-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/" class="navbar-brand">Listy</a>
                </div>
                <nav class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="@(navigationSection == NavigationSection.Listy ? "active" : "")"><a href="/">Listy</a></li>
                        <li class="@(navigationSection == NavigationSection.Searchy ? "active": "")"><a href="/searchy">Searchy</a></li>
                    </ul>
                </nav>
            </div>
        </header>

        <div class="container">
            @RenderBody()
        </div>
        
        <script src="/Js/Enums"></script>
        @Scripts.Render("~/bundles/js")
        @RenderSection("script", required: false)

    </body>
</html>
